{
  "manifest_version": 3,
  "name": "FastFocus Reader",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage"],
  "background": {
    "service_worker": "/scripts/background.js"
  },
  "action": {
    "default_title": "Toggle extension on/off",
    "default_popup": "popup.html",
    "default_icon": "icons/fastfocus-reader-icon.png"
  },
  "host_permissions": ["<all_urls>"],
  "icons": {
    "128": "icons/fastfocus-reader-icon.png"
  },
  "options_page": "options.html"
}
